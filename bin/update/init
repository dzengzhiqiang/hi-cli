source "${HI_CLI_HOME}/bin/colors"
source "${HI_CLI_HOME}/bin/clap"
source "${HI_CLI_HOME}/bin/logging"
###############################################################################
function do_update() {
  l_app_dir=$1

  pushd "${l_app_dir}" > /dev/null
  pwd

  l_branch=$(git branch | grep "*" | sed "s/* //g")
  
  git fetch
  if (( $(git diff --name-only origin/${l_branch} | wc -l) > 0 )); then
    get_file_from_path l_app_name "$0"
    if [ "${l_app_dir}" == "${HI_CLI_HOME}" ] && [ "${l_app_name}" != "hi-update" ]; then
      log_info "Prepare to update hi-cli ..."
      cp ${HI_CLI_HOME}/bin/hi /tmp/hi-update
      chmod 755 /tmp/hi-update
      export hide_version=hide_version
      export debug=debug
      exec /tmp/hi-update update 
      exit 0
    fi

    git branch --set-upstream-to=origin/${l_branch}
    log_info "Found new version, updating ..."
    git pull --force

  fi

  result=$?

  popd > /dev/null
}

function update_hi_cli() {

  do_update "${HI_CLI_HOME}"

  return $?
}

function update_package() {
  log_info "update hi-cli package $1 ..."

  do_update "${HI_CLI_HOME}/modules/${package}"

  return $?
}


function update_all() {

  update_hi_cli

  ls /usr/local/hi-cli/modules | while read package; do
    update_package $package
  done

  result=$?

  return $result
}

function run() {
  cli="hi update"

  if [ "${arg2}" == "all" ]; then
    update_all
  elif [ "${arg2}" != "" ]; then
    update_package $arg2
  else
    update_hi_cli
  fi
  result=$?

  eval $1="\${result}"
  eval $2="\${cli}"
}

###############################################################################
